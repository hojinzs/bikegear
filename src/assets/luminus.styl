/**
* Variables $
*/
@import "variable.styl"

/**
* input, textarea, button, select Common Style
*/
input, textarea, select
    &.lumi-input-liner
        background-color: rgba(255,255,255,.32)
        font-size: $global_font_text
        line-height: $global_inline_height
        // animation style
        border-bottom: 3px solid $light_grey
        padding-bottom: 3px
        transition-property: border-bottom padding-bottom
        transition-duration: 0.2s
        &:hover
            padding-bottom: 0px
            border-bottom: 6px solid $light_grey
            transition-property: border-bottom padding-bottom
            transition-duration: 0.2s
        &:focus
            padding-bottom: 0px
            border-bottom: 6px solid $light_grey_focused
            transition-property: border-bottom padding-bottom
            transition-duration: 0.2s
        &.lumi-liner-white
            border-bottom-color: $light_grey
            &:hover
                border-bottom-color: white
            &:focus
                border-bottom-color: white

/**
* Button Style
*/
button
    &.lumi-button-liner
        font-weight: 600
        font-size: $global_font_text
        line-height: $global_inline_height
        // animation style
        padding-bottom: 3px
        border-bottom: 3px solid $light_grey
        background-color: rgba(0,0,0,0)
        transition-property: border-bottom border-top padding-top background-color
        transition-duration: 0.5s
        &:hover, &:focus
            padding-bottom: 0px
            background-color: rgba(0,0,0,0.25)
            border-bottom: 6px solid $light_grey_focused
            transition-property: border-bottom border-top padding-top background-color
            transition-duration: 0.5s
        &:disabled
            padding-bottom: 3px
            border-bottom: 3px solid $light_grey
            background-color: rgba(0,0,0,0)
            transition-property: none
        &.lumi-liner-white
            border-bottom-color: white
            &:hover
                border-bottom-color: white
            &:focus
                border-bottom-color: white
    &.lumi-button
        min-width: 35px
        border-radius: 5px
        padding-top: 10px
        padding-bottom: 10px
        background rgba(255,255,255,0.25)
        overflow: hidden
        &:hover, &:focus
            box-shadow 0px 0px 5px rgba(0,0,0,0.25)
        &:disabled
            box-shadow none
            opacity 0.5
        &.lumi-button-black
            background rgba(0,0,0,0.25)

/**
* Select Style
*/
.lumi-select
    min-width 200px
    position relative
    &:after
        content: 'â–¼';
        line-height: $global_inline_height
        font: $global_font_text "Consolas" monospace
        color: $light_grey
        position: absolute;
        pointer-events: none;
        bottom 3px
        right 5px


/**
* Utility Styles
*/
.lumi-input-group, .lumi-button-group .lumi-flex-box
    display flex
    input, button, .lumi-flex-box-item
        flex 1
        margin-left: 5%
        margin-right: 5%
        &.first-child
            margin-left: 0
        $.last-child
            margin-right: 0
    &.lumi-flex-column
        flex-direction: column

/**
* Box Styles
*/
.lumi-box
    border-radius: 5px
    padding-top: 10px
    padding-bottom: 10px
    background rgba(255,255,255,0.25)
    overflow: hidden
    &.lumi-box-border
        border: 1px solid $light_grey
    .lumi-box-header
        margin-top: -10px
        padding-top: 0.5em

/**
* Table Styles
*/
table.lumi-table
    th
        font-weight: strong
        border-bottom: 2px solid $light_grey
    tr
        td
            border-bottom: 2px solid $light_grey