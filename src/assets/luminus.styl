/**
* Utility Styles
*/
.lumi-input-group, .lumi-button-group .lumi-flex-box
    display flex
    input, button, .lumi-flex-box-item
        flex 1
        margin-left: 5%
        margin-right: 5%
        &.first-child
            margin-left: 0
        $.last-child
            margin-right: 0
    &.lumi-flex-column
        flex-direction: column

/**
* Box Styles
*/
.lumi-box
    border-radius: ( ($global_font_text / 2) + ($global_font_text / 4) )
    padding-top t = ($global_font_text/2)
    padding-bottom ($global_font_text/2)
    padding-left ps = $global_font_text
    padding-right $global_font_text
    line-height $global_inline_height
    background $lumi_opacity_black_level_1
    overflow hidden
    .lumi-box-header
        margin-top -(t)
        margin-left -(ps)
        margin-right -(ps)
        padding-top t
        padding-bottom ps
        margin-bottom ps
    &.lumi-box-block-white
        text-shadow none
        background-color white
        color $light_black
    &.lumi-box-block-grey
        border-radius 5px
        background-color $lumi_block_grey_level_1
    &.lumi-box-shadow
        box-shadow 0px 0px 5px $lumi_opacity_black_level_1
    &.lumi-box-border
        border: 1px solid $light_grey
    &.lumi-box-blur
        backdrop-filter blur(5px)

/**
* Select List Group
*/
.lumi-box
    ul.lumi-list-select-group
        font-weight 600
        margin-left -($global_font_text)
        margin-right -($global_font_text)
        color white
        li.lumi-list-select-item
            padding-top 10px
            padding-bottom 10px
            border-bottom solid $lumi_opacity_white_level_2 1px
            // :hover transition
            transition-property background
            transition-duration 0.5s
            &.selected
                background $lumi_opacity_white_level_2
            &:first-child
                border-top solid $lumi_opacity_white_level_2 1px
            &:hover
                background $lumi_opacity_white_level_3
                cursor pointer
                // transition
                transition-property background
                transition-duration 0.5s


/**
* Table Styles
*/
table.lumi-table
    th
        font-weight: strong
        border-bottom: 2px solid $light_grey
    tr
        td
            border-bottom: 2px solid $light_grey

