/**
* Variables $
*/

$light_grey = #cccccc
$light_grey_focused = #999999
$global_font_text = 15px
$global_inline_height = 25px

/**
* Global Style
*/


/**
* input, textarea, button, select Common Style
*/
input, textarea, select
    background-color: rgba(255,255,255,.32)
    font-size: $global_font_text
    line-height: $global_inline_height
    // animation style
    border-bottom: 3px solid $light_grey
    padding-bottom: 3px
    transition-property: border-bottom padding-bottom
    transition-duration: 0.2s
    &:hover
        padding-bottom: 0px
        border-bottom: 6px solid $light_grey
        transition-property: border-bottom padding-bottom
        transition-duration: 0.2s
    &:focus
        padding-bottom: 0px
        border-bottom: 6px solid $light_grey_focused
        transition-property: border-bottom padding-bottom
        transition-duration: 0.2s

/**
* Button Style
*/
button
    background-color: rgba(255,255,255,0)
    font-weight: 600
    font-size: $global_font_text
    line-height: $global_inline_height
    // animation style
    padding-top: 3px
    border-top: 0px solid rgba(255,255,255,0)
    border-bottom: 3px solid $light_grey
    transition-property: border-bottom border-top padding-top
    transition-duration: 0.2s
    &:hover, &:focus
        padding-top: 0px
        border-top: 3px solid $light_grey
        border-bottom: 3px solid $light_grey_focused
        transition-property: border-bottom border-top padding-top
        transition-duration: 0.2s


/**
* Select Style
*/
select
    max-width: 100%
    background: url('/arrow-down.svg') no-repeat 95% -50%; // 나중에 개선

/**
* Utility Styles
*/

.lumi-input-group, .lumi-button-group .lumi-flex-box
    display flex
    input, button, .lumi-flex-box-item
        flex 1
        margin-left: 5%
        margin-right: 5%
        &.first-child
            margin-left: 0
        $.last-child
            margin-right: 0
    &.lumi-flex-column
        flex-direction: column

/**
* Box Styles
*/
.lumi-box
    border-radius: 5px
    border: 1px solid $light_grey
    padding-top: 10px
    padding-bottom: 10px
    overflow: hidden
    .lumi-box-header
        margin-top: -10px
        padding-top: 0.5em