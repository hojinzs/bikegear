/**
* Variables $
*/
@import "variable.styl"

html, body
    font-size $global_font_text
    line-height $global_inline_height

/**
* input, textarea, button, select Common Style
*/
input, textarea, select
    border none
    overflow auto
    outline none 
    box-shadow none
    padding 0
    resize none
    box-sizing border-box
    font-size $global_font_text
    line-height $global_inline_height
    height $global_component_height
    &.lumi-input-liner
        background-color: $lumi_opacity_white_level_2
        // animation style
        padding-bottom 3px
        border-bottom 3px solid $light_grey
        transition-property border-bottom padding-bottom
        transition-duration 0.2s
        @media (hover:hover) and (pointer: fine)
            &:hover
                padding-bottom 0px
                border-bottom 6px solid $light_grey
                transition-property border-bottom padding-bottom
                transition-duration 0.2s
        &:focus
            padding-bottom 0px
            border-bottom 6px solid $light_grey_focused
            transition-property border-bottom padding-bottom
            transition-duration 0.2s
        &.lumi-liner-white
            border-bottom-color: rgba(255,255,255,0.4)
            &:hover
                border-bottom-color: white
            &:focus
                border-bottom-color: white

/**
* a Tag Style
*/
a.a-flat
    text-decoration none
    color inherit
    &.a-flat-red
        &:active
            color red
        

/**
* Button Style
*/
button
    font-weight 500
    text-align center
    padding-left ($global_font_text * 0.7)
    padding-right ($global_font_text * 0.7)
    white-space pre
    cursor pointer
    &.lumi-button
        min-width ($global_font_text * 2)
        border-radius ( ($global_font_text / 2) + ($global_font_text / 4) )
        padding-top ($global_font_text / 2)
        padding-bottom ($global_font_text / 2)
        line-height $global_inline_height
        background rgba(255,255,255,0.45)
        overflow hidden
        user-select none
        // transition
        transition-property: box-shadow
        transition-duration: 0.3s
        &.lumi-button-border-round
            border-radius $global_inline_height
        &.lumi-button-shadow
            box-shadow 0px 0px 5px $lumi_opacity_black_level_1
            // transition
            transition-property: box-shadow
            transition-duration: 0.3s
        @media (hover:hover) and (pointer: fine)
            &:hover
                background rgba(255,255,255,0.7)
                box-shadow 0px 0px 12px $lumi_opacity_black_level_2
                // transition
                transition-property: box-shadow
                transition-duration: 0.3s
        &:disabled
            box-shadow none
            opacity 0.5
        &:active
            background rgba(255,255,255,0.9)
            box-shadow 0px 0px 12px rgba(0,0,0,0.7)
        &.selected
            background rgba(255,255,255,0.9)
            box-shadow 0px 0px 12px $lumi_opacity_black_level_2
        &.lumi-button-black
            background rgba(0,0,0,0.7)
            color white
        &.lumi-button-block-white
            background white
            color $light_black
            &:active
                background $forced_white
                box-shadow 0px 0px 12px rgba(0,0,0,0.9)
        &.lumi-button-flat-dark
            background none
            // Transition
            transition-property background-color
            transition-duration 0.3s
            &:active
                background-color $lumi_opacity_black_level_1
                box-shadow none
                // transition
                transition-property background-color
                transition-duration 0.3s
            @media (hover:hover) and (pointer: fine)
                &:hover
                    background-color $lumi_opacity_black_level_1
                    box-shadow none
                    // transition
                    transition-property background-color
                    transition-duration 0.3s
    &.lumi-button-liner
        font-size: $global_font_text
        line-height: $global_inline_height
        // animation style
        padding-bottom: 3px
        border-bottom: 3px solid $light_grey
        // background-color: rgba(0,0,0,0)
        transition-property: border-bottom border-top padding-top background-color
        transition-duration: 0.5s
        @media (hover:hover) and (pointer: fine)
            &:hover
                padding-bottom: 0px
                // background-color: rgba(0,0,0,0.25)
                border-bottom: 6px solid $light_grey_focused
                transition-property: border-bottom border-top padding-top background-color
                transition-duration: 0.5s
        &:disabled
            padding-bottom: 3px
            border-bottom: 3px solid $light_grey
            background-color: rgba(0,0,0,0)
            transition-property: none
        &.lumi-liner-white
            border-bottom-color: white
            &:hover
                border-bottom-color: white
            &:focus
                border-bottom-color: white

.lumi-button-full
    .lumi-button
        width 100%

.lumi-button
    &.lumi-button-full
        width 100%

/**
* Button Group
*/
.lumi-button-group
    display flex
    .lumi-button
        flex 1 1 auto
        &:not(:last-child)
            margin-right 0.5rem

/**
* Border Style
*/
.lumi-box-border
    border 1px solid $light_grey

/**
* Select Style
*/
