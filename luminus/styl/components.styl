/**
* Utility Styles
*/
.lumi-input-group, .lumi-button-group .lumi-flex-box
    display flex
    input, button, .lumi-flex-box-item
        flex 1
        margin-left 5%
        margin-right 5%
        &.first-child
            margin-left 0
        &.last-child
            margin-right 0
    &.lumi-flex-column
        flex-direction: column

/**
* Box Styles
*/
.lumi-box
    border-radius: ( ($global_font_text / 2) + ($global_font_text / 4) )
    padding-top t = ($global_font_text/2)
    padding-bottom ($global_font_text/2)
    padding-left ps = $global_font_text
    padding-right $global_font_text
    line-height $global_inline_height
    background-color $lumi_opacity_black_level_1
    overflow hidden
    .lumi-box-header
        margin-top -(t)
        margin-left -(ps)
        margin-right -(ps)
        padding-top t
        padding-bottom ps
        margin-bottom ps
    &.lumi-box-block-white
        text-shadow none
        background-color white
        color $light_black
    &.lumi-box-block-grey
        border-radius 5px
        background-color $lumi_block_grey_level_1
    &.lumi-box-shadow
        box-shadow 0px 0px 5px $lumi_opacity_black_level_1
    &.lumi-box-border
        border 1px solid $light_grey
    &.lumi-box-blur
        backdrop-filter blur(5px)

/**
* Table Styles
*/
table.lumi-table
    th
        font-weight: strong
        border-bottom: 2px solid $light_grey
    tr
        td
            border-bottom: 2px solid $light_grey

/**
* Select List Group
*/
.lumi-box
    ul.lumi-list-select-group
        font-weight 600
        margin-left -($global_font_text)
        margin-right -($global_font_text)
        color white
        li.lumi-list-select-item
            padding-top 10px
            padding-bottom 10px
            border-bottom solid $light_grey 1px
            // :hover transition
            transition-property: background color
            transition-duration: 0.5s
            &.selected
                background rgba(255,255,255,0.6)
            &:first-child
                border-top solid $light_grey 1px
            &:hover
                background rgba(255,255,255,0.9)
                color $light_grey_focused
                cursor pointer
                // transition
                transition-property: background color
                transition-duration: 0.5s

.lumi-blur-box
    backdrop-filter blur(2px)
    // backdrop-filter brightness(60%)


/**
* Card Components
*/
.lumi-card
    width 260px
    display inline-block
    border-radius ( ($global_font_text / 2) + ($global_font_text / 4) )
    padding-top t = ($global_font_text/2)
    padding-bottom t
    line-height $global_inline_height
    background rgba(255,255,255,0.45)
    overflow hidden
    // &.lumi-box-border
    //     border: 1px solid $light_grey
    .lumi-card-header
        margin-top -(t)
        line-height $global_inline_height
        padding-top t
        padding-bottom t
        padding-left ps = ( $global_font_text / 2)
        padding-right ps
        min-height $global_inline_height
    .lumi-card-thumbnail
        width 100%
        overflow hidden
        display flex
        align-items center 
        justify-content center
        &.lumi-card-thumbnail-headless
            margin-top -(t)
    .lumi-card-contents
        min-height $global_inline_height
        margin-top t
        padding-left ps = ( $global_font_text / 2)
        padding-right ps


/**
Seperators
 */


.seperator-y
    height 100%
    width 0.5px
    margin-left 0.5rem
    margin-right 0.5rem
    border-left solid 1px $light_grey