/**
* Variables $
*/
@import "variable.styl"

.icon
    box-sizing content-box

.lumi-container
    max-width $container_width
    margin 0 auto

.box-side-padding-sm
    padding-left $global_font_text * 0.7
    padding-right  $global_font_text * 0.7

.lumi-flex-slider-wrapper
    overflow-x hidden
    overflow-y none
    -ms-overflow-style none
    // -webkit-overflow-scrolling touch
    scrollbar-width none
    &::-webkit-scrollbar
        display none !important
    ul.lumi-flex-slider
        display flex
        flex-wrap nowrap
        user-select none
        &.lumi-flex-slider-align-bottom
            align-items flex-end
        li.lumi-flex-slider-item
            display table-cell
            float left
            margin-right 0.5rem
        &:first-child
            margin-left 0.5rem
        &:last-child::after
            visibility hidden
            content "."
            a.wrapper
                user-select none
                -webkit-user-drag: none; 
            img
                user-select none
                -webkit-user-drag: none; 


.lumi-thumbnail-wrapper
    background-color $light_grey
    &.thumbnail-border-radius
        // border 0.5px solid $light_grey
        border-radius 0.5rem
    .lumi-thumbnail
        overflow hidden
        display flex
        align-items center 
        justify-content center
        width 100px
        height 100px
        img
            width auto
            height 100%

